{
    "name": "nofw/foundation",
    "description": "Component integration tools for nowf applications",
    "license": "MIT",
    "keywords": ["nofw"],
    "homepage": "https://nofw.io",
    "authors": [
        {
            "name": "Márk Sági-Kazár",
            "email": "mark.sagikazar@gmail.com"
        }
    ],
    "require": {
        "php": "^7.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.1",
        "zendframework/zend-diactoros": "^1.0",
        "middlewares/utils": "~0.9",
        "filp/whoops": "^2.1",
        "psr/log": "^1.0",
        "http-interop/http-middleware": "^0.4.1",
        "http-interop/http-factory": "^0.3.0",
        "twig/twig": "^2.0"
    },
    "suggest": {
        "psr/http-message-implementation": "PSR-7 HTTP Message abstraction used in HTTP middlewares",
        "psr/log": "PSR-3 Log abstraction",
        "filp/whoops": "Error handler",
        "http-interop/http-middleware": "HTTP Middleware abstraction",
        "http-interop/http-factory": "HTTP Factory abstraction",
        "twig/twig": "Template engine"
    },
    "autoload": {
        "psr-4": {
            "Nofw\\Foundation\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nofw\\Foundation\\Tests\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.3-dev"
        }
    },
    "prefer-stable": true,
    "minimum-stability": "dev"
}
